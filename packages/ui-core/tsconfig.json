{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // ✅ Add this:
    "types": ["react", "react-dom"]
  },
  // ✅ Expand scope to include .storybook or other workspace files
  "include": ["src", ".storybook", "**/*.ts", "**/*.tsx"]
}
